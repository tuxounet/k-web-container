{
  "name": "@tuxounet/k-web-container",
  "version": "0.0.13",
  "description": "",
  "main": "out/cli.js",
  "scripts": {
    "start": "node .",
    "build": "tsc -p tsconfig.json",
    "build-all": "npm run clean && npm run build && npm run esbuild-node && npm run esbuild-browser",
    "esbuild-browser": "esbuild src/browser.ts --bundle --minify --sourcemap=external --outfile=out/browser.js",
    "esbuild-browser:dev": "esbuild src/browser.ts --bundle --outfile=out/browser.js",
    "esbuild-browser:watch": "esbuild src/browser.ts --bundle --watch --outfile=out/browser.js",
    "esbuild-node": "esbuild src/cli.ts --bundle --platform=node --minify --sourcemap=external --outfile=out/cli.js",
    "esbuild-node:dev": "esbuild src/cli.ts --bundle --platform=node --sourcemap=external --outfile=out/cli.js",
    "esbuild-node:watch": "esbuild src/cli.ts --bundle --platform=node --watch --sourcemap=external --outfile=out/cli.js",
    "lint": "eslint ./ --fix",
    "clean": "rm -rf dist build out coverage",
    "ts-node": "ts-node ./src/cli.ts",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tuxounet/k-web-container.git"
  },
  "keywords": [],
  "author": {
    "name": "Krux"
  },
  "license": "apache2",
  "bugs": {
    "url": "https://github.com/tuxounet/k-web-container/issues"
  },
  "homepage": "https://github.com/tuxounet/k-web-container#readme",
  "devDependencies": {
    "@types/jest": "^29.1.2",
    "@types/node": "^18.8.3",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "esbuild": "^0.15.10",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.3.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.1",
    "jest": "^29.1.2",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  }
}
